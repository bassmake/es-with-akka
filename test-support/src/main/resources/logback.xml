<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- for color on windows -->
    <withJansi>true</withJansi>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger{30}) - %msg %n</pattern>
    </encoder>
  </appender>

  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
  </root>

  <logger name="slick" level="INFO" additivity="false">
    <appender-ref ref="STDOUT" />
  </logger>
  <logger name="com.zaxxer.hikari" level="INFO" additivity="false">
    <appender-ref ref="STDOUT" />
  </logger>

  <logger name="org.jooq" level="DEBUG" additivity="false">
    <appender-ref ref="STDOUT" />
  </logger>

  <logger name="sk.bsmk" level="DEBUG" additivity="false">
    <appender-ref ref="STDOUT" />
  </logger>

</configuration>
